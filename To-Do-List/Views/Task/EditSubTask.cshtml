@model SubTask
@{
    ViewData["Title"] = "Edit Subtask";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link rel="stylesheet" href="@Url.Content("~/css/inputs.css")">
</head>
<body>
    <div class="theInputs">
        <h2>Edit Subtask</h2>

        <form asp-action="EditSubTask" asp-controller="Task" method="post">
            <!-- Title Input -->
            <input required asp-for="Title" class="form-input" placeholder="Subtask title" />

            <!-- Hidden Fields -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="TaskModelId" type="hidden" />

            <!-- Completion Status -->
            <div class="radio-group">
                <p>Is completed?</p>
                <div class="radio-option">
                    <input type="radio" id="done" asp-for="Done" value="True">
                    <label for="done">Complete</label>
                </div>
                <div class="radio-option">
                    <input type="radio" id="notDone" asp-for="Done" value="False">
                    <label for="notDone">Uncomplete</label>
                </div>
            </div>
          
            <!-- Submit Button -->
            <input type="submit" value="Save Changes" class="btn-submit" />
        </form>
    </div>
</body>
</html>