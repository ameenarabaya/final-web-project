@model User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "SignUp Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Updated CSS links to use Url.Content with correct paths -->
    <link rel="stylesheet" href="@Url.Content("~/css/base.css")" asp-append-version="true">
    <link rel="stylesheet" href="@Url.Content("~/css/signup.css")" asp-append-version="true">
    <link rel="icon" href="@Url.Content("~/img/title-icon.png")" asp-append-version="true">
    <title>TO-DO-List SignUp</title>
</head>

<body>
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="left-side-image">
                    <!-- Updated image source to use Url.Content -->
                    <img src="@Url.Content("~/img/login.jpg")" alt="to-do-list-image desktop login-page">
                </div>
                <div class="right-side">
                    <h2>Sing Up</h2>
                    <form method="post" asp-action="signup" asp-controller="User" autocomplete="on">
                        <div class="social-media">
                            <div class="row">
                                <button>
                                    <!-- Updated social media icons -->
                                    <img src="@Url.Content("~/img/facebook.svg")" alt="facebook">
                                    <a href="https://www.facebook.com/">Continue with Facebook</a>
                                </button>
                            </div>

                            <div class="row">
                                <button>
                                    <img src="@Url.Content("~/img/google.svg")" alt="google">
                                    <a href="https://myaccount.google.com/email/">Continue with Google</a>
                                </button>
                            </div>

                            <div class="row">
                                <button>
                                    <img src="@Url.Content("~/img/apple.svg")" alt="apple">
                                    <a href="https://www.apple.com/">Continue with Apple</a>
                                </button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Id">
                        <div class="box">
                            <label for="name">Name</label>
                            <input type="text" id="name" asp-for="Name" required placeholder="Your Name...">
                        </div>
                        <div class="box">
                            <label for="mail">Email</label>
                            <input type="email" id="mail" asp-for="Email" required placeholder="Your Email...">
                        </div>
                        <div class="box">
                            <label for="pass">Password</label>
                            <input type="password" id="pass" asp-for="Password" required placeholder="Your Password...">
                        </div>
                        @* <div class="box"> *@
                        @*     <label for="confirm">Confirm Password</label> *@
                        @*     <input type="password" id="confirm" name="confirmPassword" required placeholder="Confirm Your Password..."> *@
                        @* </div> *@

                        <input type="submit" value="Sign Up">
                        <!-- Updated navigation link -->
                        <a asp-action="Index" class="account">Have an Account?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
